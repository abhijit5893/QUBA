<project name="LearnDistribution" default="build">
  <!-- Generated by MPS -->
  <property name="build.dir" location="build" />
  <property name="build.tmp" location="${build.dir}/tmp/LearnDistribution" />
  <property name="build.layout" location="${build.dir}/artifacts/LearnDistribution" />
  <property name="mps_home" location="${basedir}/../../../../Program Files (x86)/JetBrains/MPS 3.1 EAP" />
  <property name="version" value="3.0" />
  <property name="artifacts.Learn" location="${build.dir}/artifacts/Learn" />
  <property file="${artifacts.Learn}/build.properties" prefix="import.Learn" />
  <property name="Learn.date" value="${import.Learn.Learn.date}" />
  <property name="Learn.build.number" value="${import.Learn.Learn.build.number}" />
  <property name="mpsBootstrapCore.version" value="${import.Learn.mpsBootstrapCore.version}" />
  
  <target name="assemble" depends="classes, declare-mps-tasks, fetchDependencies">
    <mkdir dir="${build.layout}" />
    <mkdir dir="${build.tmp}/default/_dl__lbrace_build.number_rbrace_-linux.tar.gz" />
    <mkdir dir="${build.tmp}/default/_dl__lbrace_build.number_rbrace_-linux.tar.gz/Learn ${version}" />
    <mkdir dir="${build.tmp}/default/_dl__lbrace_build.number_rbrace_-linux.tar.gz/Learn ${version}/bin" />
    <copy todir="${build.tmp}/default/_dl__lbrace_build.number_rbrace_-linux.tar.gz/Learn ${version}/bin">
      <fileset file="${mps_home}/bin/mps.exe.vmoptions" />
      <filterchain>
        <fixcrlf eol="lf" eof="remove" />
      </filterchain>
    </copy>
    <mkdir dir="${build.tmp}/default/_dl__lbrace_build.number_rbrace_-linux.tar.gz_f755" />
    <copy todir="${build.tmp}/default/_dl__lbrace_build.number_rbrace_-linux.tar.gz_f755">
      <fileset file="${mps_home}/mps.bat" />
      <filterchain>
        <fixcrlf eol="lf" eof="remove" />
      </filterchain>
    </copy>
    <tar destfile="${build.layout}/${Learn.build.number}-linux.tar.gz" compression="gzip" longfile="gnu">
      <tarfileset dir="${artifacts.Learn}" prefix="Learn ${version}" />
      <tarfileset dir="${mps_home}/bin" prefix="Learn ${version}/bin">
        <exclude name="**/fsnotifier" />
        <exclude name="**/fsnotifier64" />
      </tarfileset>
      <tarfileset file="${mps_home}/bin/fsnotifier.exe" prefix="Learn ${version}/bin" filemode="755" />
      <tarfileset dir="${build.tmp}/default/_dl__lbrace_build.number_rbrace_-linux.tar.gz_f755" filemode="755" prefix="Learn ${version}" />
      <tarfileset dir="${build.tmp}/default/_dl__lbrace_build.number_rbrace_-linux.tar.gz" />
    </tar>
    <zip destfile="${build.layout}/${Learn.build.number}.zip">
      <zipfileset dir="${artifacts.Learn}" prefix="Learn ${version}" />
      <zipfileset file="${mps_home}/bin/mps.exe.vmoptions" prefix="Learn ${version}/bin" />
      <zipfileset dir="${mps_home}/bin" prefix="Learn ${version}/win">
        <exclude name="**/*.exe" />
      </zipfileset>
      <zipfileset dir="${mps_home}/bin" prefix="Learn ${version}/win" filemode="755">
        <include name="**/*.exe" />
      </zipfileset>
      <zipfileset file="${mps_home}/mps.bat" prefix="Learn ${version}" filemode="755" />
    </zip>
    <echo file="${build.layout}/build.properties">LearnDistribution.version=${version}${line.separator}Learn.date=${Learn.date}${line.separator}Learn.build.number=${Learn.build.number}${line.separator}mpsBootstrapCore.version=${mpsBootstrapCore.version}</echo>
  </target>
  
  <target name="buildDependents">
    <ant antfile="build.xml" inheritAll="false" useNativeBasedir="true" />
  </target>
  
  <target name="fetchDependencies" />
  
  <target name="build" depends="assemble" />
  
  <target name="clean">
    <delete dir="${build.tmp}" />
    <delete dir="${build.layout}" />
  </target>
  
  <target name="compileJava" />
  
  <target name="processResources" />
  
  <target name="classes" depends="compileJava, processResources" />
  
  <target name="test" depends="classes" />
  
  <target name="check" depends="test" />
  
  <target name="generate" depends="declare-mps-tasks" />
  
  <target name="declare-mps-tasks" />
  
  <target name="makeDependents" />
</project>